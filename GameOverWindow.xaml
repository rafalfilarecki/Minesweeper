<Window x:Class="Minesweeper.GameOverWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Game Over" Height="200" Width="300">
    <StackPanel>
        <TextBlock Name="MessageTextBlock" Text="Game Over!" Margin="20" HorizontalAlignment="Center"/>
        <Button Name="NewGameButton" Content="New Game" Width="100" Margin="5" Click="NewGameButton_Click"/>
        <Button Name="RestartButton" Content="Restart" Width="100" Margin="5" Click="RestartButton_Click"/>
        <Button Name="EndGameButton" Content="End Game" Width="100" Margin="5" Click="EndGameButton_Click"/>
    </StackPanel>
</Window>